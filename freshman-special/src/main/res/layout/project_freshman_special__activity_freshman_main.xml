<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".view.activity.FreshmanMainActivity">

    <include layout="@layout/project_freshman_special__toolbar" />
    <android.support.v7.widget.CardView
        android:id="@+id/freshman_guide_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_margin="@dimen/default_margin"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="4dp"
        app:cardCornerRadius="@dimen/card_radius">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/homepage_fresh_guid"

            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/freshman_big_data_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="4dp"
        app:cardCornerRadius="@dimen/card_radius">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/homepage_big_data"

            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/freshman_cqupt_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="4dp"
        app:cardCornerRadius="@dimen/card_radius">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/homepage_cqupt_style"

            />
    </android.support.v7.widget.CardView>

    <com.mredrock.cyxbs.component.widget.NavigationBarMarginView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
