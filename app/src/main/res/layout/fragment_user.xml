<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_grey"
              tools:context=".ui.fragment.UserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/my_page_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_layout"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp">


                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/my_page_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_default_avatar"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/my_page_nick_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginStart="12dp"
                            android:textColor="@color/text_dark"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/my_page_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginStart="4dp"
                            android:gravity="center"
                            android:paddingBottom="1dp"
                            android:textColor="@color/pink"
                            android:textSize="18sp"
                            tools:text="♂"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/my_page_introduce"
                            android:textColor="@color/text_light_2"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/my_page_introduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/text_light_2"
                            android:textSize="12sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider"/>

            <RelativeLayout
                android:id="@+id/my_page_relate_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_layout"
                android:paddingLeft="24dp"
                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_relate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_relate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_relate"
                    android:text="@string/my_page_relate"
                    android:textColor="@color/text_dark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_page_trend_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/bg_layout"
                android:paddingLeft="24dp"
                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_trend"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_trend"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_trend"
                    android:text="@string/my_page_trend"
                    android:textColor="@color/text_dark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_page_no_course_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/bg_layout"
                android:paddingLeft="24dp"
                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_no_course"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_no_course"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_no_course"
                    android:text="@string/my_page_no_course"
                    android:textColor="@color/text_dark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_page_empty_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/bg_layout"
                android:paddingLeft="24dp"
                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_empty"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_empty"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_empty"
                    android:text="@string/my_page_empty"
                    android:textColor="@color/text_dark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_page_grade_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/bg_layout"
                android:paddingLeft="24dp"
                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_grade"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_grade"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_grade"
                    android:text="@string/my_page_grade"
                    android:textColor="@color/text_dark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_page_calendar_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/bg_layout"
                android:paddingLeft="24dp"
                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_calendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_calendar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_calendar"
                    android:text="@string/my_page_calendar"
                    android:textColor="@color/text_dark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_page_remind_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/bg_layout"
                android:paddingLeft="24dp"
                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_remind"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_remind"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_remind"
                    android:text="课前提醒"
                    android:textColor="@color/text_dark"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="15dp"
                android:background="@color/divider"/>

            <RelativeLayout
                android:id="@+id/my_page_night_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/white"
                android:paddingLeft="24dp"
                android:paddingStart="24dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/my_page_iv_night"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_night"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_night"
                    android:text="@string/my_page_night"
                    android:textColor="@color/text_dark"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/my_page_switch_compat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:theme="@style/SwitchStyle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="44dp"
                    android:background="@color/divider_light"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_page_setting_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/bg_layout"
                android:paddingLeft="24dp"
                android:paddingStart="24dp">

                <ImageView
                    android:id="@+id/my_page_iv_setting"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_my_page_setting"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/my_page_iv_setting"
                    android:text="@string/my_page_setting"
                    android:textColor="@color/text_dark"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="15dp"
                android:background="@color/divider"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>