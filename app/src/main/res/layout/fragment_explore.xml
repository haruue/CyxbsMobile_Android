<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/explore_roll_view_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/explore_roll_viewpager_height"
            android:scaleType="fitXY"
            app:rollviewpager_hint_color="#7c7c7c"
            app:rollviewpager_hint_paddingBottom="16dp"
            app:rollviewpager_hint_paddingLeft="16dp"
            app:rollviewpager_hint_paddingRight="16dp"
            app:rollviewpager_hint_paddingTop="16dp"
            app:rollviewpager_play_delay="3000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/explore_portal_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/explore_image_size"
                    android:layout_height="@dimen/explore_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_portal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explore_portal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/explore_map_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/explore_image_size"
                    android:layout_height="@dimen/explore_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_map" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explore_map" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/explore_what_to_eat_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/explore_image_size"
                    android:layout_height="@dimen/explore_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_find_food" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explore_eat" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/explore_surrounding_food_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/explore_image_size"
                    android:layout_height="@dimen/explore_image_size"
                    android:src="@drawable/ic_around_food" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explore_around_food" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/explore_fresher_special_holder"
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:background="@drawable/bg_explore_holder"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/explore_holder_height"
                android:layout_weight="1"
                android:clickable="false" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>

